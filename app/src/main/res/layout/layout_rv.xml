<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#26292e"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="15dp">

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="31,253.42"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="BTC-USDT"
        android:textColor="#EA8555"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Price Uncovered"
        android:textColor="#EA8555"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/priceuncovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="31,250.45"
        android:textColor="#F1F1F1"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exchangeid"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/but_bug"
        android:clickable="false"
        android:fontFamily="@font/montserrat_bold"
        android:text="BINANCE"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/status"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="275dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/btn_small"
        android:fontFamily="@font/montserrat_bold"
        android:text="ACTIVE"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/date"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="195dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="145dp"
        android:background="@drawable/btn_small"
        android:fontFamily="@font/montserrat_bold"
        android:text="24.5.2021"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/change24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="206dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="-8.37%"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Change 24h"
        android:textColor="#EA8555"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="114dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Volume 24h"
        android:textColor="#EA8555"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/volume24h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="3,708,863,530"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />



</androidx.cardview.widget.CardView>